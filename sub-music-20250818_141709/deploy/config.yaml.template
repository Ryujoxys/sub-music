server:
  port: 8080
  host: localhost
  cors_origins:
    - "http://localhost:3000"

database:
  type: sqlite
  path: ./data/app.db

storage:
  temp_dir: ./temp
  output_dir: ./output
  assets_dir: ./assets

# Dify工作流配置 - 请替换为你的实际配置
dify:
  api_key: "your-dify-api-key-here"           # 替换为你的Dify API密钥
  base_url: "your-dify-base-url-here"         # 替换为你的Dify服务地址
  workflow_id: "your-dify-workflow-id-here"   # 替换为你的工作流ID

# 科大讯飞TTS配置 - 请替换为你的实际配置
xfyun:
  app_id: "your-xfyun-app-id-here"           # 替换为你的科大讯飞APP ID
  api_key: "your-xfyun-api-key-here"         # 替换为你的科大讯飞API Key
  api_secret: "your-xfyun-api-secret-here"   # 替换为你的科大讯飞API Secret
  host_url: "wss://tts-api.xfyun.cn/v2/tts"
  voice_name: "x4_yezi"  # 语音合成参数

# 音频处理配置
audio:
  sample_rate: 44100
  bit_rate: 320
  format: mp3
  max_duration: 3600  # 最大时长(秒)
  
  # 音量配置 (0.0-1.0)
  volumes:
    voice: 0.05     # 语音音量 5%
    binaural: 0.1   # 双耳节拍音量 10%
    whitenoise: 0.7 # 白噪音音量 70%
    bgm: 0.9        # 背景音乐音量 90%

  # 语音处理配置
  voice_speed: 10   # 语音播放速度倍数

# FFmpeg配置
ffmpeg:
  binary_path: "ffmpeg"  # FFmpeg可执行文件路径
  temp_format: "wav"     # 临时文件格式
